    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
                try {
            
          
            OracleDataSource ods1=new OracleDataSource();
            ods1.setURL("jdbc:oracle:thin:@localhost:1521:orcl");
            ods1.setUser("system");
            ods1.setPassword("Abcabc11");
            Connection conn=ods1.getConnection();
            Statement st=conn.createStatement();
            
            ResultSet r=st.executeQuery("select * from task");
            String tn=this.jTextField1.getText();
            while(r.next()){
                String taskname=r.getString(1);
                if(tn.equals(taskname)){
                   
            String td=r.getString(2);
            this.jTextArea1.append(td);
          String da=r.getString(5);
          SimpleDateFormat f=new SimpleDateFormat("yyyy-MM-dd");
                   
                        java.util.Date d;
                    try {
                        d = f.parse(da);
                    
                   
          
          this.jDateChooser1.setDate(d);
          } catch (ParseException ex) {
                        Logger.getLogger(EditTask.class.getName()).log(Level.SEVERE, null, ex);
                    }
            String done=r.getString(6);
            String cn=r.getString(4);
            this.jTextField4.setText(cn);
            if(done.equals("yes")){
            this.jCheckBox1.setSelected(true);
            
            }
            else if(done.equals("not yet")){
             this.jCheckBox2.setSelected(true);
            }
                
               
                
                
                }
            
         
            }
        } catch (SQLException ex) {
            Logger.getLogger(P11.class.getName()).log(Level.SEVERE, null, ex);
        }
        
        
        
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
      
        
           
            
            
            
            OracleDataSource ods;
            try {
                ods = new OracleDataSource();
           
            
            ods.setURL("jdbc:oracle:thin:@localhost:1521:orcl");
            ods.setUser("system");
            ods.setPassword("Abcabc11");
            Connection conn=ods.getConnection();
            Statement st=conn.createStatement();
            String tn=this.jTextField1.getText();
        
            ResultSet r=st.executeQuery("select * from task");
              String stmt="delete from task where taskname='" +tn+"'";
                st.executeUpdate(stmt);
                this.jTextField1.setText("");
            
                this.jTextField4.setText("");
                this.jTextArea1.setText("");
                this.jDateChooser1.setToolTipText("");
                this.jCheckBox1.setSelected(false);
                 this.jCheckBox2.setSelected(false);
                
            } catch (SQLException ex) {
                Logger.getLogger(EditTask.class.getName()).log(Level.SEVERE, null, ex);
                
                         }
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
            
            OracleDataSource ods;
            try {
                ods = new OracleDataSource();
           
            
            ods.setURL("jdbc:oracle:thin:@localhost:1521:orcl");
            ods.setUser("system");
            ods.setPassword("Abcabc11");
            Connection conn=ods.getConnection();
            Statement st=conn.createStatement();
            String tn=this.jTextField1.getText();
            String td=this.jTextArea1.getText();
      
           SimpleDateFormat df=new  SimpleDateFormat("yyyy-MM-dd");         
            String sd=df.format(this.jDateChooser1.getDate());
    
        
            String cat=this.jTextField4.getText();
                  String done1="";
            if(this.jCheckBox1.isSelected()){
            done1=this.jCheckBox1.getText();
            }
            else if(this.jCheckBox2.isSelected()){
             done1=this.jCheckBox2.getText();
            }
        
            ResultSet r=st.executeQuery("select * from task");
              String stmt="update task set taskdescription='" +td+"'where taskname='"+tn+"'";
                st.executeUpdate(stmt);
                
                String stmt1="update task set categoryname='" +cat+"'where taskname='"+tn+"'";
                st.executeUpdate(stmt1);
                 
                 String stmt3="update task set done='" +done1+"'where taskname='"+tn+"'";
                st.executeUpdate(stmt3);
                  String stmt4="update task set taskdate='" +sd+"'"+"where taskname='"+tn+"'";
                st.executeUpdate(stmt4);
                
                this.jTextField1.setText("");
              this.jDateChooser1.setToolTipText("");
              
                this.jTextField4.setText("");
                this.jTextArea1.setText("");
                this.jCheckBox1.setSelected(false);
                 this.jCheckBox2.setSelected(false);
                 this.jDateChooser1.setCalendar(null);
                 
                 
                 conn.commit();
                 conn.close();
                
            } catch (SQLException ex) {
                Logger.getLogger(EditTask.class.getName()).log(Level.SEVERE, null, ex);
                
                         }
        
        
        
    }                                        

